<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/productName"
                    android:text="Item1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price"
                    android:text="10,99â‚¬"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>
            <Button
                android:id="@+id/increase_btn"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/ic_add_white_16dp"
                android:layout_weight="0.01"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quantity"
                android:text="1"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"></TextView>
            <Button
                android:id="@+id/decrease_btn"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/ic_remove_white_16dp"
                android:layout_weight="0.01"/>

            <Button
                android:id="@+id/remove_btn"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/ic_baseline_delete_outline_24"
                android:layout_weight="0.01" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>