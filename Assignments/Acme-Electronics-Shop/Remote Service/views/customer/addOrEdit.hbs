<h3>{{viewTitle}}</h3>

<form action="/customer" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{customer._id}}">
    <div class="form-group">
        <label>User ID</label>
        <input type="text" class="form-control" name="userID" placeholder="User ID" value="{{customer.userID}}">
    </div>
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" value="{{customer.name}}">
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" placeholder="Address" value="{{customer.address}}">
    </div>
    <div class="form-group">
        <label>Fiscal Number</label>
        <input type="text" class="form-control" name="fiscalNumber" placeholder="Fiscal Number" value="{{customer.fiscalNumber}}">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{customer.email}}">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" class="form-control" name="password" placeholder="Password" value="{{customer.password}}">
    </div>
    <div class="form-group">
        <label>Public Key</label>
        <input type="text" class="form-control" name="publicKey" placeholder="Public Key" value="{{customer.publicKey}}">
    </div>
    <div class="form-group">
        <label>Card Type</label>
        <input type="text" class="form-control" name="cardType" placeholder="Card Type" value="{{customer.cardType}}">
    </div>
    <div class="form-group">
        <label>Card Number</label>
        <input type="text" class="form-control" name="cardNumber" placeholder="Card Number" value="{{customer.cardNumber}}">
    </div>
    <div class="form-group">
        <label>Card Validity</label>
        <input type="text" class="form-control" name="cardValidity" placeholder="Card Validity" value="{{customer.cardValidity}}">
    </div>
    <div class="form-group">
        <button type="submit" class="bttn btn-info">Submit</button>
        <a class="bttn btn-secondary" href="/customer/list">View All</a>
    </div>
</form>