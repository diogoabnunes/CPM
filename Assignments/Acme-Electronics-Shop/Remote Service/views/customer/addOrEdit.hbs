<h3>{{viewTitle}}</h3>

<form action="/student" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{customer._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" value="{{customer.name}}">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{customer.email}}">
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" placeholder="Address" value="{{customer.address}}">
    </div>
    <div class="form-group">
        <label>Fiscal Number</label>
        <input type="text" class="form-control" name="fiscalNumber" placeholder="Fiscal Number" value="{{customer.fiscalNumber}}">
    </div>
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="username" placeholder="Username" value="{{customer.username}}">
    </div>
    <div class="form-group">
        <button type="submit" class="bttn btn-info">Submit</button>
        <a class="bttn btn-secondary" href="/customer/list">View All</a>
    </div>
</form>