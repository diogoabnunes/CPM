<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShowScanInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Purchase"
            android:gravity="center"
            android:textSize="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_show_info"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"

            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:text="productID: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tv_show_info2"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_show_info"
            android:text="Name: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tv_show_info3"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_show_info2"
            android:text="Make: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tv_show_info4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_show_info3"
            android:layout_marginLeft="5dp"
            android:text="Model: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tv_show_info5"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_show_info4"
            android:text="Price: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tv_show_info6"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_show_info5"
            android:text="Characteristics: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            />


        <TableRow
            android:id="@+id/show_scan_info_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_show_info6">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <Button
                android:id="@+id/btn_back_shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to shopping cart" />
        </TableRow>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>